<header class="fixed">
  <nav>
    <div class="nav-wrapper indigo">
      <a href="#" class="brand-logo">NWO Italia</a>
    </div>
  </nav>
</header>
<section class="container">
  <div class="row home-buttons">
    <div class="col s6 m4">
      {{#link-to 'chemtrails' class="btn waves-effect waves-light blue"}}
        <i class="mdi-maps-flight left"></i> Chemtrails
      {{/link-to}}
    </div>
    <div class="col s6 m4">
      {{#link-to 'haarp' class="btn waves-effect waves-light amber"}}
        <i class="mdi-device-wifi-tethering left"></i> HAARP
      {{/link-to}}
    </div>
    <div class="col s6 m4">
      {{#link-to 'seigniorage' class="btn waves-effect waves-light green"}}
        <i class="mdi-editor-attach-money"></i> Seignorage
      {{/link-to}}
    </div>
    <div class="col s6 m4">
      {{#link-to 'vaccines' class="btn waves-effect waves-light red"}}
        <i class="mdi-maps-local-hospital left"></i> Vaccines
      {{/link-to}}
    </div>
    <div class="col s6 m4">
      {{#link-to 'politics' class="btn waves-effect waves-light brown"}}
        <i class="mdi-social-group left"></i> Politics
      {{/link-to}}
    </div>
    <div class="col s6 m4">
      {{#link-to 'mind-control' class="btn waves-effect waves-light lime"}}
        <i class="mdi-action-visibility-off left"></i> Mind Control
      {{/link-to}}
    </div>
  </div>

  <div class="row no-pad">
    <div class="col s12 m6">
      <h4>Chemtrails</h4>
    </div>
  </div>
  
  <div class="row no-pad">
    <div class="col s12 l6">
      <div class="row no-pad">
        <div class="col s8">
          <h5>Next sprayings</h5>
        </div>
        <div class="col s4 right-align">
          <a class="btn">More</a>
        </div>
      </div>
      <div class="row">
        {{#each flight in flights}}
        <div class="col s6">
          <div class="card">
            <div class="card-content">
              <span class="card-title black-text lighten-2">
                <i class="mdi-device-access-time"></i> {{ format-time flight.take_off }}
              </span>
              <br />
              <span class="card-title black-text lighten-1">
                <i class="mdi-maps-flight"></i> {{ flight.origin.code }} â†’ {{ flight.destination.code }}
              </span>
              <p>
                Take off {{ time-from-now flight.take_off }}
              </p>
              <p>
                {{#each compound in flight.compounds }}
                  {{ compound.name }} 
                {{/each}}
              </p>
            </div>
          </div>
        </div>
        {{/each}}
      </div>
    </div>
  </div>

  <div class="row no-pad">
    <div class="col s12">
      <div class="row no-pad">
        <div class="col s8">
          <h4>Directives</h4>
        </div>
        <div class="col s4 right-align">
          <a class="btn">More</a>
        </div>
      </div>
      <div class="row">
        <div class="col s12">
          <ul class="card collection">
            <li class="collection-item">
              <article class="row">
                <div class="col s2">
                  <i class="category blue mdi-maps-flight"></i>
                </div>
                <div class="col s10">
                  <header class="row title">
                    <span class="col s9 title">Lorem ipsum</span>
                    <small class="col s3 date right-align">25 dec 08:00</small>
                  </header>
                  <p class="body-preview">Lorem ipsum dolor sit amet</p>
                </div>
              </article>
            </li>
            <li class="collection-item">
              <article class="row">
                <div class="col s2">
                  <i class="category amber mdi-device-wifi-tethering"></i>
                </div>
                <div class="col s10">
                  <header class="row title">
                    <span class="col s9 title">Lorem ipsum</span>
                    <small class="col s3 date right-align">25 dec 08:00</small>
                  </header>
                  <p class="body-preview">Lorem ipsum dolor sit amet</p>
                </div>
              </article>
            </li>
          </ul>
        </div>
      </div>
    </div>
  </div>
</section>