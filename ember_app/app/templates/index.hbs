<header class="">
  <nav class="indigo">
    <div class="container">
      <div class="nav-wrapper">
        <a class="button-collapse" href="#" data-activates="nav-mobile"><i class="mdi-navigation-menu"></i></a>
        <a href="#" class="brand-logo">NWO Italia</a>
      </div>
    </div>
  </nav>
</header>
<aside>
  <ul id="nav-mobile" class="right side-nav">
    <li class="header white-text" style="background-image: url(images/haarp-small.png)">
      <div class="avatar">
        <img src="images/chemtrails-xsmall.png" />
      </div>
      <div class="name"></div>
      <div clas="extra"></div>
    </li>
    <li><a href="#"><i class="mdi-action-visibility"></i> NWO Italia home</a></li>
    <li><a href="#"><i class="{{ unbound category-icon 'chemtrails' }}"></i> My sprayings</a></li>
    <li><a href="#"><i class="{{ unbound category-icon 'haarp' }}"></i> My irradiations</a></li>
    <li><a href="#"><i class="mdi-action-announcement"></i> Directives <span class="badge blue white-text">5 unread</span></a></li>
    <li class="separator"></li>
    <li><a href="#"><i class="mdi-action-account-box"></i> My profile</a></li>
    <li><a href="#">Settings</a></li>
  </ul>
</aside>
<section class="container">
  <div class="row home-buttons">
    <div class="col s6 m4">
      {{#link-to 'chemtrails' class="btn waves-effect waves-light chemtrails"}}
        <i class="{{ unbound category-icon 'chemtrails' }} left"></i> Chemtrails
      {{/link-to}}
    </div>
    <div class="col s6 m4">
      {{#link-to 'haarp' class="btn waves-effect waves-light haarp"}}
        <i class="{{ unbound category-icon 'haarp' }} left"></i> HAARP
      {{/link-to}}
    </div>
    <div class="col s6 m4">
      {{#link-to 'seigniorage' class="btn waves-effect waves-light seigniorage"}}
        <i class="{{ unbound category-icon 'seigniorage' }} left"></i> Seignorage
      {{/link-to}}
    </div>
    <div class="col s6 m4">
      {{#link-to 'vaccines' class="btn waves-effect waves-light vaccines"}}
        <i class="{{ unbound category-icon 'vaccines' }} left"></i> Vaccines
      {{/link-to}}
    </div>
    <div class="col s6 m4">
      {{#link-to 'politics' class="btn waves-effect waves-light politics"}}
        <i class="{{ unbound category-icon 'politics' }} left"></i> Politics
      {{/link-to}}
    </div>
    <div class="col s6 m4">
      {{#link-to 'mind-control' class="btn waves-effect waves-light mind-control"}}
        <i class="{{ unbound category-icon 'mind-control' }} left"></i> Mind Control
      {{/link-to}}
    </div>
  </div>

  <div class="row no-pad">
    <div class="col s12 l6">
      <div class="row">
        <div class="col s12">
          <ul class="collection card-like with-header">
            <li class="collection-header blue-grey darken-1 white-text">
              <a href="pork">
                <h4>
                  Chemtrails
                  <i class="mdi-navigation-arrow-forward right"></i>
                </h4>
              </a>
            </li>
            {{#each flight in flights}}
            <li class="collection-item">
              <article class="flight-preview">
                <header>
                  <span class="time">
                    <i class="mdi-device-access-time"></i> {{ format-time flight.take_off }}
                  </span>
                  <span class="airports">
                    <i class="mdi-maps-flight"></i> {{ flight.origin.code }} â†’ {{ flight.destination.code }}
                  </span>
                </header>
                <p class="take-off">
                  Take off {{ time-from-now flight.take_off }}
                </p>
                <p class="compounds">
                  {{#each compound in flight.compounds }}
                    {{ compound.name }}
                  {{/each}}
                </p>
              </article>
            </li>
            {{/each}}
          </ul>
        </div>
      </div>
    </div>

    <div class="col s12 l6">
      <div class="row">
        <div class="col s12">
          <ul class="collection card-like with-header">
            <li class="collection-header blue-grey darken-1 white-text">
              <a href="pork">
                <h4>
                  Directives
                  <i class="right mdi-navigation-arrow-forward"></i>
                </h4>
              </a>
            </li>
            {{#each directive in directives}}
            <li class="collection-item">
              <article>
                <i class="list-icon circle {{ unbound directive.category }} {{ unbound category-icon directive.category }}"></i>
                <header>
                  <span class="title">{{ directive.title }}</span>
                  <small class="date">{{ hour-or-date directive.date }}</small>
                </header>
                <div class="body-preview">{{ directive.body_preview }}</div>
              </article>
            </li>
            {{/each}}
          </ul>
        </div>
      </div>
    </div>
  </div>
</section>
